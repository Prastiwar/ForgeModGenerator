<UserControl x:Class="ForgeModGenerator.RecipeGenerator.Controls.RecipeEditForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ForgeModGenerator.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:mahapp="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:ForgeModGenerator.RecipeGenerator.Controls"
             mc:Ignorable="d"
             MinWidth="500"
             d:DesignHeight="450"
             d:DesignWidth="500">
    <Grid Margin="16"
          Background="WhiteSmoke">
        <materialDesign:DialogHost x:Name="DialogHost"
                                   Identifier="RecipeHost">
            <ScrollViewer>
                <StackPanel>
                    <ComboBox x:Name="RecipeTypeComboBox"
                              SelectedItem="{Binding Path=RecipeType}"
                              ItemsSource="{Binding Path=RecipeTypes, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:RecipeEditForm}}"
                              SelectionChanged="RecipeTypeComboBox_SelectionChanged"
                              DisplayMemberPath="Name"
                              Background="#FF404040"
                              Foreground="#FFE8E8E8"
                              BorderBrush="Wheat"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              HorizontalContentAlignment="Center"
                              Width="220"
                              FontSize="11"
                              materialDesign:HintAssist.Hint="Select Recipe Type" />
                    <Border BorderThickness="0.7"
                            BorderBrush="Black">
                        <Grid Background="GhostWhite">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="145" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0"
                                        Margin="7">
                                <TextBlock x:Name="NameTextBlock"
                                           Text="Name: "
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="3,0,3,0"
                                           Height="{Binding ActualHeight, ElementName=NameTextBox, Mode=OneWay}"
                                           VerticalAlignment="Center" />
                                <TextBlock x:Name="GroupTextBlock"
                                           Text="Group: "
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="3,0,3,0"
                                           Height="{Binding ActualHeight, ElementName=GroupTextBox, Mode=OneWay}"
                                           VerticalAlignment="Center" />
                                <TextBlock x:Name="CookingTimeTextBlock"
                                           Text="Cooking Time: "
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="3,0,3,0"
                                           Height="{Binding ActualHeight, ElementName=CookingTimeNumeric, Mode=OneWay}"
                                           VerticalAlignment="Center" />
                                <TextBlock x:Name="ExperienceTextBlock"
                                           Text="Experience: "
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="3,0,3,0"
                                           Height="{Binding ActualHeight, ElementName=ExperienceNumeric, Mode=OneWay}"
                                           VerticalAlignment="Center" />
                                <Separator />
                                <TextBlock x:Name="ResultTextBlock"
                                           Text="Result: "
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="3,0,3,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="Count: "
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="3,0,3,0"
                                           Height="{Binding ActualHeight, ElementName=ResultCountNumeric, Mode=OneWay}"
                                           VerticalAlignment="Center" />
                                <TextBlock Text="Item: "
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="3,0,3,4"
                                           Height="{Binding ActualHeight, ElementName=ResultItemButton, Mode=OneWay}"
                                           VerticalAlignment="Center" />
                                <Separator />
                                <TextBlock x:Name="PatternTextBlock"
                                           Text="Pattern: "
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Margin="3,0,3,0"
                                           Height="{Binding ActualHeight, ElementName=PatternGrid, Mode=OneWay}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="1"
                                        Margin="7">
                                <controls:SubmitTextBox x:Name="NameTextBox"
                                                        Text="{Binding Name, ValidatesOnDataErrors=True}"
                                                        VerticalAlignment="Center"
                                                        IsTabStop="True"
                                                        TextWrapping="Wrap" />
                                <controls:SubmitTextBox x:Name="GroupTextBox"
                                                        Text="{Binding Group, ValidatesOnDataErrors=True}"
                                                        VerticalAlignment="Center"
                                                        IsTabStop="True"
                                                        TextWrapping="Wrap" />
                                <mahapp:NumericUpDown x:Name="CookingTimeNumeric"
                                                      Value="{Binding Path=CookingTime, ValidatesOnDataErrors=True}"
                                                      HideUpDownButtons="True"
                                                      NumericInputMode="Numbers"
                                                      FontSize="15" />
                                <mahapp:NumericUpDown x:Name="ExperienceNumeric"
                                                      Value="{Binding Path=Experience, ValidatesOnDataErrors=True}"
                                                      HideUpDownButtons="True"
                                                      NumericInputMode="Decimal"
                                                      FontSize="15" />
                                <Separator />
                                <Separator Height="{Binding ActualHeight, ElementName=ResultTextBlock, Mode=OneWay}"
                                           Background="Transparent" />
                                <mahapp:NumericUpDown x:Name="ResultCountNumeric"
                                                      Value="{Binding Path=Result.Count, ValidatesOnDataErrors=True}"
                                                      HideUpDownButtons="True"
                                                      NumericInputMode="Decimal"
                                                      FontSize="15" />
                                <Button x:Name="ResultItemButton"
                                        Padding="5"
                                        Margin="15,0,3,0"
                                        Height="48"
                                        Width="48"
                                        HorizontalAlignment="Left"
                                        Background="{x:Null}"
                                        Foreground="{x:Null}"
                                        BorderBrush="Black"
                                        Click="SlotResult_Click">
                                    <Button.Content>
                                        <Image />
                                    </Button.Content>
                                </Button>
                                <Separator />
                                <Grid x:Name="PatternGrid"
                                      Height="150"
                                      Width="200">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="FirstSlot"
                                            Tag="00"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="5"
                                            Height="48"
                                            Width="48"
                                            Background="{x:Null}"
                                            Foreground="{x:Null}"
                                            BorderBrush="Black"
                                            Click="Slot_Click">
                                        <Button.Content>
                                            <Image />
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="SecondSlot"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Tag="01"
                                            Padding="5"
                                            Height="48"
                                            Width="48"
                                            Background="{x:Null}"
                                            Foreground="{x:Null}"
                                            BorderBrush="Black"
                                            Click="Slot_Click">
                                        <Button.Content>
                                            <Image />
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="ThirdSlot"
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            Tag="02"
                                            Padding="5"
                                            Height="48"
                                            Width="48"
                                            Background="{x:Null}"
                                            Foreground="{x:Null}"
                                            BorderBrush="Black"
                                            Click="Slot_Click">
                                        <Button.Content>
                                            <Image />
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="FourthSlot"
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Tag="10"
                                            Padding="5"
                                            Height="48"
                                            Width="48"
                                            Background="{x:Null}"
                                            Foreground="{x:Null}"
                                            BorderBrush="Black"
                                            Click="Slot_Click">
                                        <Button.Content>
                                            <Image />
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="FifthSlot"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Tag="11"
                                            Padding="5"
                                            Height="48"
                                            Width="48"
                                            Background="{x:Null}"
                                            Foreground="{x:Null}"
                                            BorderBrush="Black"
                                            Click="Slot_Click">
                                        <Button.Content>
                                            <Image />
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="SixthSlot"
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Tag="12"
                                            Padding="5"
                                            Height="48"
                                            Width="48"
                                            Background="{x:Null}"
                                            Foreground="{x:Null}"
                                            BorderBrush="Black"
                                            Click="Slot_Click">
                                        <Button.Content>
                                            <Image />
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="SeventhSlot"
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Tag="20"
                                            Padding="5"
                                            Height="48"
                                            Width="48"
                                            Background="{x:Null}"
                                            Foreground="{x:Null}"
                                            BorderBrush="Black"
                                            Click="Slot_Click">
                                        <Button.Content>
                                            <Image />
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="EightSlot"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Tag="21"
                                            Padding="5"
                                            Height="48"
                                            Width="48"
                                            Background="{x:Null}"
                                            Foreground="{x:Null}"
                                            BorderBrush="Black"
                                            Click="Slot_Click">
                                        <Button.Content>
                                            <Image />
                                        </Button.Content>
                                    </Button>
                                    <Button x:Name="NinethSlot"
                                            Grid.Row="2"
                                            Grid.Column="2"
                                            Tag="22"
                                            Padding="5"
                                            Height="48"
                                            Width="48"
                                            Background="{x:Null}"
                                            Foreground="{x:Null}"
                                            BorderBrush="Black"
                                            Click="Slot_Click">
                                        <Button.Content>
                                            <Image />
                                        </Button.Content>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <Separator />
                    <StackPanel>
                        <TextBlock x:Name="IngredientsTextBlock"
                                   Text="Ingredients"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="3,0,3,0"
                                   VerticalAlignment="Center" />
                        <local:EditableIngredientList x:Name="IngredientsListBox"
                                                      LengthLimit="{Binding IngredientsLengthLimit, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:RecipeEditForm}}"
                                                      HorizontalAlignment="Stretch"
                                                      ItemsSource="{Binding Ingredients, ValidatesOnDataErrors=True}"
                                                      HorizontalContentAlignment="Stretch" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,16,0,0">
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                            <Button.CommandParameter>
                                <system:Boolean>True</system:Boolean>
                            </Button.CommandParameter> SAVE
                        </Button>
                        <Button IsCancel="True"
                                Style="{DynamicResource MaterialDesignFlatButton}"
                                Margin="8,0,0,0"
                                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                            <Button.CommandParameter>
                                <system:Boolean>False</system:Boolean>
                            </Button.CommandParameter> CANCEL
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </materialDesign:DialogHost>
    </Grid>
</UserControl>
